<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="002_create_user_story_table_001" author="ivanna.bezpalko">
        <comment>Create user_story table</comment>
        <createTable tableName="user_story">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="input_id" type="varchar(100)"/>
            <column  name="description"  type="varchar(255)">
                <constraints  nullable="false"/>
            </column>
            <column  name="member_id"  type="bigint">
                <constraints  nullable="false"/>
            </column>
            <column  name="session_id"  type="bigint">
                <constraints  nullable="false"/>
            </column>
            <column name="emitted_votes" type="integer"/>
        </createTable>

        <rollback>
            <dropTable tableName="user_story" />
        </rollback>
    </changeSet>

</databaseChangeLog>
